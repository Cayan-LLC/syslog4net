@{
    ViewBag.TraceUrl = Request.ApplicationPath + (Request.ApplicationPath.EndsWith("/") ? "" : "/") + "trace.axd";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>

<body>
    <header>
        <h1>Essential.Diagnostics: Hello MVC3</h1>
        <nav>
            <ol>              
                <li>Start at @Html.ActionLink("Home", "Index", "Home")</li>
                <li>Open a page to @Html.ActionLink("Log", "Log", "Home")</li>
                <li>View the resulting <a href="@ViewBag.TraceUrl">Trace.axd</a></li>
            </ol>
        </nav>
    </header>
    @RenderBody()
</body>
</html>
